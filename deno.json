{
  "version": "0.9.0",
  "tasks": {
    "build:npm": "deno run --allow-env --allow-read --allow-write --allow-net --allow-run scripts/build_npm.ts",
    "fmt": "deno run --allow-read --allow-write --allow-sys --allow-env npm:prettier@latest -w src examples && deno fmt src scripts examples"
  },
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true
  },
  "imports": { "@deno/dnt": "jsr:@deno/dnt@^0.41.1" }
}
